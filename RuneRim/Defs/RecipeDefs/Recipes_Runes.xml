<Defs>

  <!-- РЕЦЕПТ: Fire Rune -->
  <RecipeDef>
    <defName>RuneRim_MakeFireRune</defName>
    <label>craft fire rune</label>
    <description>Craft a fire rune that grants fireball ability.</description>
    <jobString>Crafting fire rune.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>CutStone</effectWorking>
    <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
    <workAmount>3500</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>StoneChunks</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>StoneChunks</li>
      </categories>
      <thingDefs>
        <li>Silver</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <RuneRim_FireRune>1</RuneRim_FireRune>
    </products>
    <skillRequirements>
      <Crafting>3</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>TableStonecutter</li>
    </recipeUsers>
    <researchPrerequisite>Stonecutting</researchPrerequisite>
  </RecipeDef>

