<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- БАЗОВАЯ РУНА (абстрактная) -->
  <ThingDef ParentName="ApparelBase" Name="RuneBase" Abstract="True">
    <techLevel>Medieval</techLevel>
    <smeltable>false</smeltable>
    <graphicData>
      <texPath>Things/Item/Resource/Gold</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Mass>0.2</Mass>
      <MarketValue>500</MarketValue>
    </statBases>
    <generateCommonality>0</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <tags>
        <li>Rune</li>
      </tags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
    </apparel>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <!-- ✅ ИСПРАВЛЕНО: Используем compClass -->
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>

  <!-- РУНА ОГНЯ (атакующая) -->
  <ThingDef ParentName="RuneBase">
    <defName>RuneRim_FireRune</defName>
    <label>fire rune</label>
    <description>A mystical rune inscribed with ancient fire symbols. When worn, grants the ability to cast fireballs at enemies. Can be equipped in offensive rune slot 1 or 2.\n\nUses depend on quality:\n- Awful: 1 | Poor: 2 | Normal: 4 | Good: 6 | Excellent: 8 | Masterwork: 10 | Legendary: 12</description>
    <graphicData>
      <texPath>Things/Item/Rune/FireRune</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <apparel>
      <layers>
        <li>RuneSlot_Offensive1</li>
        <li>RuneSlot_Offensive2</li>
      </layers>
    </apparel>
    <comps>
      <li Class="RuneRim.CompProperties_Rune">
        <abilityDef>RuneRim_Fireball</abilityDef>
        <baseUses>4</baseUses>
      </li>
    </comps>
  </ThingDef>

  <!-- РУНА МОЛНИИ (атакующая) -->
  <ThingDef ParentName="RuneBase">
    <defName>RuneRim_LightningRune</defName>
    <label>lightning rune</label>
    <description>A mystical rune crackling with electrical energy. When worn, grants the ability to summon lightning strikes against enemies. Deals 20 damage with a 5% chance to stun the target for 3 seconds. Can be equipped in offensive rune slot 1 or 2.\n\nUses depend on quality:\n- Awful: 1 | Poor: 2 | Normal: 4 | Good: 6 | Excellent: 8 | Masterwork: 10 | Legendary: 12</description>
    <graphicData>
      <texPath>Things/Item/Rune/LightningRune</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <apparel>
      <layers>
        <li>RuneSlot_Offensive1</li>
        <li>RuneSlot_Offensive2</li>
      </layers>
    </apparel>
    <comps>
      <li Class="RuneRim.CompProperties_Rune">
        <abilityDef>RuneRim_LightningStrike</abilityDef>
        <baseUses>4</baseUses>
      </li>
    </comps>
  </ThingDef>

  <!-- РУНА ОГНЕННОГО ЩИТА (защитная) -->
  <ThingDef ParentName="RuneBase">
    <defName>RuneRim_FireShieldRune</defName>
    <label>fire shield rune</label>
    <description>A protective rune imbued with defensive fire magic. When worn, grants the ability to conjure a flaming shield that increases armor and burns nearby enemies. Occupies the defensive rune slot.\n\nShield lasts 60 seconds and can be toggled on/off.\n\nUses depend on quality:\n- Awful: 1 | Poor: 2 | Normal: 4 | Good: 6 | Excellent: 8 | Masterwork: 10 | Legendary: 12</description>
    <graphicData>
      <texPath>Things/Item/Rune/FireShieldRune</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <apparel>
      <layers>
        <li>RuneSlot_Defensive</li>
      </layers>
    </apparel>
    <comps>
      <li Class="RuneRim.CompProperties_Rune">
        <abilityDef>RuneRim_FireShield</abilityDef>
        <baseUses>4</baseUses>
      </li>
    </comps>
  </ThingDef>

</Defs>
