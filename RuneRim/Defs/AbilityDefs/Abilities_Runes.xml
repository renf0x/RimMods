<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- FIREBALL ABILITY -->
  <AbilityDef>
    <defName>RuneRim_Fireball</defName>
    <label>fireball</label>
    <description>Hurl a ball of fire at a target, causing burn damage and setting them ablaze.</description>
    <iconPath>Things/Item/Resource/ComponentIndustrial</iconPath>
    <cooldownTicksRange>400</cooldownTicksRange>
    <aiCanUse>true</aiCanUse>
    <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>
    <hostile>true</hostile>
    <casterMustBeCapableOfViolence>true</casterMustBeCapableOfViolence>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>20</range>
      <warmupTime>0.5</warmupTime>
      <soundCast>RuneRim_Fireball_Cast</soundCast>
      <targetParams>
        <canTargetLocations>false</canTargetLocations>
        <canTargetPawns>true</canTargetPawns>
        <canTargetBuildings>false</canTargetBuildings>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="CompProperties_AbilityLaunchProjectile">
        <projectileDef>RuneRim_Projectile_Fireball</projectileDef>
      </li>
    </comps>
  </AbilityDef>

  <!-- Projectile для фаербола -->
  <ThingDef ParentName="BaseBullet">
    <defName>RuneRim_Projectile_Fireball</defName>
    <label>fireball</label>
    <graphicData>
      <texPath>Things/Projectile/Fireball</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <color>(255,150,0)</color>
    </graphicData>
    <projectile>
      <damageDef>Flame</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <speed>45</speed>
    </projectile>
  </ThingDef>

  <!-- LIGHTNING STRIKE ABILITY -->
  <AbilityDef>
    <defName>RuneRim_LightningStrike</defName>
    <label>lightning strike</label>
    <description>Summon a lightning bolt to strike a target, dealing 20 electrical damage with a 5% chance to stun for 3 seconds.</description>
    <iconPath>Things/Item/Resource/ComponentIndustrial</iconPath>
    <cooldownTicksRange>180</cooldownTicksRange>
    <aiCanUse>true</aiCanUse>
    <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>
    <hostile>true</hostile>
    <casterMustBeCapableOfViolence>true</casterMustBeCapableOfViolence>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>20</range>
      <warmupTime>0.10</warmupTime>
      <soundCast>Thunder_OnMap</soundCast>
      <targetParams>
        <canTargetLocations>false</canTargetLocations>
        <canTargetPawns>true</canTargetPawns>
        <canTargetBuildings>true</canTargetBuildings>
        <canTargetAnimals>true</canTargetAnimals>
        <canTargetHumans>true</canTargetHumans>
        <canTargetMechs>true</canTargetMechs>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="RuneRim.CompProperties_AbilityLightningStrike">
        <damage>20</damage>
        <stunChance>0.15</stunChance>
        <stunDurationTicks>180</stunDurationTicks>
      </li>
    </comps>
  </AbilityDef>

  <!-- FIRE SHIELD ABILITY (защитная) -->
  <AbilityDef ParentName="AbilityTouchBase">
    <defName>RuneRim_FireShield</defName>
    <label>fire shield</label>
    <description>Summon a protective shield of flames that increases armor by 5% and has a 30% chance to burn nearby enemies. Lasts 30 seconds. Can be toggled on/off.</description>
    <iconPath>UI/Abilities/FireShield</iconPath>
    <cooldownTicksRange>300</cooldownTicksRange>
    <aiCanUse>true</aiCanUse>
    <displayGizmoWhileUndrafted>true</displayGizmoWhileUndrafted>
    <disableGizmoWhileUndrafted>false</disableGizmoWhileUndrafted>
    <jobDef>CastAbilityOnThingMelee</jobDef>
    <targetRequired>false</targetRequired>
    <casterMustBeCapableOfViolence>false</casterMustBeCapableOfViolence>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>0</range>
      <warmupTime>0.5</warmupTime>
      <soundCast>Interact_Incinerate</soundCast>
      <targetParams>
        <canTargetSelf>true</canTargetSelf>
      </targetParams>
    </verbProperties>
  </AbilityDef>

</Defs>
