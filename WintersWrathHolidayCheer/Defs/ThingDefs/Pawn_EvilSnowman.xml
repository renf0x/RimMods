<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="AnimalThingBase">
        <defName>EvilSnowman</defName>
        <label>evil snowman</label>
        <description>A malevolent snowman animated by dark winter magic. It attacks colonists with freezing snowballs and is extremely durable due to its icy armor. Appears only during winter or in cold biomes.</description>
        <statBases>
            <MoveSpeed>3.8</MoveSpeed>
            <MarketValue>1200</MarketValue>
            <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.30</ArmorRating_Sharp>
            <ArmorRating_Heat>-0.6</ArmorRating_Heat>
            <ComfyTemperatureMin>-120</ComfyTemperatureMin>
            <ComfyTemperatureMax>0</ComfyTemperatureMax>
            <MeleeDodgeChance>0.12</MeleeDodgeChance>
        </statBases>
        <race>
            <wildBiomes>
                <BorealForest>0.03</BorealForest>
                <Tundra>0.05</Tundra>
                <IceSheet>0.02</IceSheet>
            </wildBiomes>
            <body>QuadrupedAnimalWithClawsTailAndJowl</body>
            <baseBodySize>1.3</baseBodySize>
            <baseHealthScale>4.0</baseHealthScale>
            <baseHungerRate>0.05</baseHungerRate>
            <foodType>None</foodType>
            <leatherDef>Leather_Light</leatherDef>
            <manhunterOnDamageChance>1.0</manhunterOnDamageChance>
            <predator>false</predator>
            <trainability>None</trainability>
            <lifeExpectancy>3</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0</minAge>
                </li>
            </lifeStageAges>
        </race>
        <tools>
            <li>
                <label>icy fist</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>3</power>
                <cooldownTime>4</cooldownTime>
                <linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
            </li>
        </tools>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <label>throw snowball</label>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Projectile_Snowball</defaultProjectile>
                <warmupTime>0.8</warmupTime>
                <range>25</range>
                <minRange>3</minRange>
                <burstShotCount>1</burstShotCount>
                <soundCast>Pawn_Melee_Punch_HitPawn</soundCast>
                <muzzleFlashScale>0</muzzleFlashScale>
                <accuracyTouch>0.05</accuracyTouch>
                <accuracyShort>0.85</accuracyShort>
                <accuracyMedium>0.75</accuracyMedium>
                <accuracyLong>0.50</accuracyLong>
                <ai_AvoidFriendlyFireRadius>3</ai_AvoidFriendlyFireRadius>
            </li>
        </verbs>
        <comps>
            <li Class="WintersWrathHolidayCheer.CompProperties_PreferRangedAttack">
                <rangedPreferenceChance>0.95</rangedPreferenceChance>
            </li>
            <li Class="WintersWrathHolidayCheer.CompProperties_AutoManhunter">
                <checkIntervalTicks>60</checkIntervalTicks>
            </li>
        </comps>
    </ThingDef>

    <PawnKindDef ParentName="AnimalKindBase">
        <defName>EvilSnowman</defName>
        <label>evil snowman</label>
        <race>EvilSnowman</race>
        <combatPower>150</combatPower>
        <ecoSystemWeight>0.25</ecoSystemWeight>
        <wildGroupSize>
            <min>1</min>
            <max>3</max>
        </wildGroupSize>
        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Pawn/EvilSnowman/EvilSnowman</texPath>
                    <drawSize>1.6</drawSize>
                    <shadowData>
                        <volume>(0.45, 0.65, 0.45)</volume>
                        <offset>(0,0,-0.1)</offset>
                    </shadowData>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Pawn/EvilSnowman/Dessicated_EvilSnowman</texPath>
                    <drawSize>1.6</drawSize>
                </dessicatedBodyGraphicData>
            </li>
        </lifeStages>
    </PawnKindDef>
</Defs>
